<section id="todoapp">
  <header id="header">
    <h1>ember-gdrive</h1>
    {{input id="new-todo" placeholder="Type task title" value=newTaskTitle action='create'}}
  </header>
 
  <section id="main">
    {{outlet}} 
    {{input type="checkbox" id="toggle-all" checked=allAreDone }}
  </section>
 
  <footer id="footer">
    <span id="todo-count">
      <strong>{{remainingCount}}</strong> todos left
    </span>
    <ul id="filters">
      <li>
        {{#link-to "tasks.index" activeClass="selected"}}All{{/link-to}}
      </li>
      <li>
        {{#link-to "tasks.remaining" activeClass="selected"}}Remaining{{/link-to}}
      </li>
      <li>
        {{#link-to "tasks.completed" activeClass="selected"}}Completed{{/link-to}}
      </li>
    </ul>
 
    <button id="clear-completed" {{action 'clearCompleted'}}>
      Clear completed ({{completedCount}})
    </button>
  </footer>
</section>
 
<footer id="info">
  <p>Double-click to edit a todo</p>
</footer>
