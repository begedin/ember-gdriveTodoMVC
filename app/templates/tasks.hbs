<form action 'create' on="submit">
  {{input placeholder="Type task title" value=newTaskTitle }}
  <input type="submit" value="Add" {{action 'create'}}/>

  <ul>
    {{#each task in model}}
    <li><span>{{task.title}}</span>
      <button {{action 'delete' task}}>X</button>
    </li>
    {{/each}}
  </ul>
</form>